<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginEnd="@dimen/spacing_small"
    android:minWidth="@dimen/poi_item_view_min_width"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/itemPoiImageView"
        android:layout_width="@dimen/poi_size"
        android:layout_height="@dimen/poi_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circular_border_with_transparent_background"
        android:padding="@dimen/spacing_small"
        android:src="@drawable/ic_poi"
        android:contentDescription="@string/point_of_interest_icon" />

    <TextView
        android:id="@+id/itemPoiNameTextView"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/spacing_extra_small"
        android:text="@string/point_of_interest_placeholder" />

</LinearLayout>

